.group
  = f.label :name, t("activerecord.attributes.poll.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description

.group
  = f.label :description, t("activerecord.attributes.poll.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
  %span.description

.group
  = f.label :published, t("activerecord.attributes.poll.pubslihed", :default => "Publish"), :class => :label
  = f.check_box :published, :class => 'check_box'
  %span.description

  .nested_form_fields
    - f.fields_for :poll_questions do |p|
      = render :partial => 'admin/polls/forms/poll_question_fields', :locals => {:f => p}
    .add
      = link_to_add_fields "Add question", f, :poll_questions, "admin/polls/forms/"

.group.navform.wat-cf
  %button.button{:type => 'submit'}
    = image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  = link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admin_polls_path, :class => "button"
