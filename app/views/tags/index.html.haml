- content_for(:sidebar) do
  = render :partial => 'shared/user_status'
  = render :partial => 'shared/trending_tags'
  // = render :partial => 'shared/hashtag_filter'

.categories_list
  %h2
    = t('tags.title')

  .categories
    - @tags.each do |tag|
      .list
        .body
          %h3= link_to tag.name, tag
          // %span.when= t('global.time_ago', :time => time_ago_in_words(list.created_at))
          .members= "#{pluralize(tag.count, t('tags.tagging'))}"
    %p
      = will_paginate @tags
